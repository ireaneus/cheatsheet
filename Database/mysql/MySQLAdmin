
 MySQL Admin:
 mysqladmin status -u root -p
 netstat -nat | grep 3306
 mysqldump -u root -p tecmint > tecmint.sql	## Backup database ##
 mysql> create database tecmint;		## Restore database ##
 mysql -u root -p tecmint < tecmint.sql		## Restore database ##
 mysqladmin -uroot -p ping			## Verify mysql alive ##
 mysqladmin -uroot -p shutdown
 
 Connections:
 mysql> show status like 'Conn%';
 mysql> show status like '%onn%';
 
 Health Status
 mysql> show processlist;
 mysql> SHOW STATUS;
 mysql> SHOW STATUS LIKE 'Key%';
 mysql> show databases;
 mysql> show tables;
 
 User access:
 mysql> CREATE USER user12@localhost IDENTIFIED BY '34klq*';
 mysql> GRANT ALL ON mydb.* to user12@localhost;
 MariaDB [(none)]> use mysql;
 MariaDB [mysql]> SELECT user, host, password FROM user;
 MariaDB [mysql]> create user user1@localhost identified by 'P@ssw0rd1';
 MariaDB [mysql]> describe user;
 MariaDB [mysql]> SELECT user, super_priv FROM user;

 
 
 mysql> CREATE DATABASE mydb;
 mysql> use database;
 mysql> system pwd
 mysql> source cars.sql 
